[32m+[m[32mconst formatScreenName = (name: string | null, displayName: string | null): string => {[m
[32m+[m[32m  const parts = [name, displayName].filter(Boolean);[m
[32m+[m[32m  if (parts.length === 0) return "Tela sem nome";[m
[32m+[m[32m  if (parts.length === 1) return parts[0];[m
[32m+[m[32m  // Remove duplica√ß√£o se os nomes forem iguais[m
[32m+[m[32m  if (parts[0] === parts[1]) return parts[0];[m
[32m+[m[32m  return parts.join(" - ");[m
[32m+[m[32m};[m
[32m+[m
